<Window x:Class="C__WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C__WPF"
        mc:Ignorable="d"
        Title="ToDoApp" Height="450" Width="800">

    <Grid>

        <TextBox x:Name="AddText" Margin="10,10,10,10" VerticalAlignment="Top"/>
        <Button x:Name="AddButton" Content="Add" Margin="10,40,10,10" VerticalAlignment="Top" Click="AddBUtton_Click"/>
        <ListBox x:Name="AllItemShow" Margin="10,70,10,40"/>
        <Button x:Name="RemoveButton
                " Content="Delete" Margin="10,30,10,10" VerticalAlignment="Bottom" Click="RemoveItem_Click"/>
    </Grid>
</Window>
